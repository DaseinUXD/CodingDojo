<!--main_tag .container -->
<main role="main" class="container" style="padding-top: 60px">
  <!--  top row-->
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <%# if @error_count %>
        <%# for i in 0..@error_count do %>
          <div class="text-danger">
            <%#= @error_messages[i] %>
            <%#= @error_hash.values_at('street') %>
          </div>
        <%#end %>

      <%#end %>
    </div>
    <div class="col-2">
      <%#= @error_hash.values_at('branch') %>
    </div>
  </div>
  <!--  middle row-->
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <!--      form-->
      <form action="/dojo/<%@dojo.id %>/edit" method="get" class="form mt-5">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<!--        <input type="hidden" name="_method" value="patch">-->
        <fieldset>
          <legend class="h1">Edit <%=@dojo.city %></legend>
          <!--          branch-->
          <div class="form-group form-row">
            <label for="branch" class="col-2 col-form-label">Branch:</label>
            <div class="col-auto">
              <input id="branch" type="text" name="branch" class="form-control" value="<%=@dojo.branch %>">
            </div>

          </div>
          <!--          street-->
          <div class="form-group form-row">
            <label for="street" class="col-2 col-form-label">Street:</label>
            <div class="col-auto">
              <input id="street" type="text" name="street" class="form-control"  value="<%=@dojo.street %>">
            </div>
          </div>
          <!--          city-->
          <div class="form-group form-row">
            <label for="city" class="col-2 col-form-label">City:</label>
            <div class="col-auto">
              <input id="city" type="text" name="city" class="form-control"  value="<%=@dojo.city %>">
            </div>
          </div>
          <!--          state-->
          <div class="form-group form-row">
            <label for="state" class="col-2 col-form-label">State:</label>
            <div class="col-auto">
              <input id="state" type="text" name="state" class="form-control"  value="<%=@dojo.state %>">
            </div>
          </div>
          <!--          submit button-->
          <div class="form-group form-row">
            <div class="col-2"></div>
            <div class="col-auto">
              <input id="submit" type="submit" name="submit" class="btn btn-primary form-control" value="Update">
            </div>
          </div>
        </fieldset>
      </form>
    </div>
    <div class="col-2"></div>
  </div>
  <!--  bottom row-->
  <div class="row">
    <div class="col-12"></div>
  </div>
</main>
