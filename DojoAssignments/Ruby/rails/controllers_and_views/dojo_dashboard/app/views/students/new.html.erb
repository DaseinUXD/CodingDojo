<!--header-->
<header class="container">
  <!--Fixed navbar-->
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="#"><%= image_tag asset_path("brain_shapes_32.png", :alt => "logo") %></a>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="../../../../dojo">Home<span class="sr-only"></span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="../../<%= @dojo.id %>"><%= @dojo.city %> Dojo<span class="sr-only"></span></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="../../<%= @dojo.id %>/students"><%= @dojo.city %>
          Students<span class="sr-only"></span></a>
      </li>
    </ul>
    </div>
  </nav>
</header>
<!--main_tag .container -->
<main role="main" class="container" style="padding-top: 60px">
  <!--top row-->
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <% if @errors %>
        <% for i in 0..@errors.count do %>
          <div class="text-danger">
            <%= @errors[i] %>
          </div>
        <% end %>
      <% end %>
      </div>
  <div class="col-2">
  </div>
  </div>
  <!--middle row-->
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <!--student form-->
      <form action="/dojo/<%= @dojo.id %>/students" method="post" class="form mt-5">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <fieldset>
          <legend class="h1">New Student</legend>
          <!--first_name-->
          <div class="form-group form-row">
            <label for="first_name" class="col-2 col-form-label">First Name:</label>
            <div class="col-auto">
              <input id="first_name" type="text" name="first_name" class="form-control" value="">
            </div>
          </div>
          <!--last_name-->
          <div class="form-group form-row">
            <label for="last_name" class="col-2 col-form-label">Last Name:</label>
            <div class="col-auto">
              <input id="last_name" type="text" name="last_name" class="form-control"value="">
            </div>
          </div>
          <!--email-->
          <div class="form-group form-row">
            <label for="city" class="col-2 col-form-label">Email:</label>
            <div class="col-auto">
              <input id="city" type="text" name="email" class="form-control" value="">
            </div>
          </div>
          <!--dojo-->
          <div class="form-group form-row">
            <label for="dojo_id" class="col-2 col-form-label">Dojo Branch:</label>
            <div class="col-auto">
              <select id="dojo_id" type="text" name="dojo_select" class="form-control">
                <option>Choose...</option>
                <% @dojos.each do |dojo| %>
                  <option value="<%= dojo.id %>"><%= dojo.branch %></option>
                <% end %>
              </select>
            </div>
          </div>
          <!--submit button-->
          <div class="form-group form-row">
            <div class="col-2"></div>
            <div class="col-auto">
              <input id="submit" type="submit" name="submit" value="Add Student" class="btn btn-primary form-control">
            </div>

          </div>
        </fieldset>
      </form>
    </div>
    <div class="col-2"></div>
  </div>
  <!--bottom row-->
  <div class="row">
    <div class="col-12"></div>
  </div>
</main>
